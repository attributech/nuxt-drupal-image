{
  "name": "@attributech/nuxt-drupal-image",
  "version": "0.3.2",
  "description": "Nuxt module for handling Drupal image styles",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/attributech/nuxt-drupal-image.git"
  },
  "keywords": [
    "nuxt",
    "nuxt3",
    "nuxt-module",
    "drupal",
    "image",
    "image-styles"
  ],
  "author": "attribute",
  "license": "MIT",
  "main": "dist/module.mjs",
  "types": "dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nuxt-module-build --config module.config.ts",
    "dev": "nuxi dev playground",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "nuxt-module-build --config module.config.ts",
    "release": "npm run lint && npm run build && npm publish",
    "prerelease": "npm run lint && npm run build",
    "test": "vitest run",
    "playground": "nuxi dev playground"
  },
  "dependencies": {
    "@nuxt/eslint-config": "^1.1.0",
    "@nuxt/kit": "^3.10.0",
    "@nuxt/module-builder": "^0.8.4",
    "@types/node": "^22.13.5",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "devDependencies": {
    "@nuxt/schema": "^3.10.0",
    "@nuxt/test-utils": "^3.10.0",
    "nuxt": "^3.10.0"
  },
  "peerDependencies": {
    "nuxt": "^2.16.0 || ^3.0.0"
  },
  "engines": {
    "node": ">=20.10.0"
  }
