{
  "name": "@attributech/nuxt-drupal-image",
  "version": "0.3.3",
  "description": "Nuxt module for handling Drupal image styles",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/attributech/nuxt-drupal-image.git"
  },
  "keywords": [
    "nuxt",
    "nuxt3",
    "nuxt-module",
    "drupal",
    "image",
    "image-styles"
  ],
  "author": "attribute",
  "license": "MIT",
  "exports": {
    ".": "./dist/module.mjs"
  },
  "main": "./dist/module.mjs",
  "types": "dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare",
    "release": "npm run lint && npm run build && npm publish",
    "prerelease": "npm run lint && npm run build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "nuxi prepare playground && vitest run --coverage --typecheck",
    "test:e2e": "playwright test",
    "playground": "nuxi dev playground"
  },
  "dependencies": {
    "@nuxt/eslint-config": "^1.1.0",
    "@nuxt/kit": "^3.10.0",
    "@nuxt/module-builder": "^0.8.4",
    "@types/node": "^22.13.5",
    "eslint": "^9.21.0",
    "nuxt-lazyimages": "^0.2.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "devDependencies": {
    "@nuxt/schema": "^3.10.0",
    "@nuxt/test-utils": "^3.17.1",
    "@playwright/test": "^1.50.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^3.0.7",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^26.0.0",
    "nuxt": "^3.10.0"
  },
  "peerDependencies": {
    "nuxt": "^2.16.0 || ^3.0.0"
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
